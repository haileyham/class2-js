<script>
  // ajax는 새로고침 없이 GET, POST 요청 가능
  // ajax로 GET요청

  $.get('https://codingapple1.github.io/hello.txt').done(function(data){
    console.log(data);
  })
  // $.get(url~~)하고
  // .done(function(){}) 하면 성공적으로 가져올시 done 안에 실행
  // function(파라미터){~~~파라미터} 콜백함수 파라미터 적용시 
  // url 데이터 가져와서 출력해줌


  //ajax로 POST요청
  $.post('https://codingapple1.github.io/hello.txt').done(function(data){
    console.log(data);
  }).fail(function(){
    console.log('실패')
  })
// .fail(function(){}) post실패했을경우 실행
</script>
<script>
  $.get('https://codingapple1.github.io/price.json').done(function(d){
    console.log(d.price);
  })
  // d만 출력했을경우 {price:5000} object 자료뜸. 가격만뜨게하기위해서는 d.price 혹은 d['price']

</script>
<script>
  //쌩자바스크립트는 fetch 써서 Ajax요청가능
  fetch('https://codingapple1.github.io/price.json')
  .then(res => res.json())
  //서버랑 object,array 보내고 싶으면 따옴표쳐서 문자처럼 만들어야함(문자만 주고받을수있음 원래)
  //이거를 나중에 읽을때 어려움 > 원래대로 바꿔주는게 JSON
  // 받아온 JSON을 object로 바꿔주는 기능
  //$.get() 얘는 JSON > object 자동변환해줌
  .then(function(data){
    console.log(data)
  })
  .catch(function(error){
    console.log('실패함')
  });


</script>



